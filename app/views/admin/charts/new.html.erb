<% content_for(:title) do %>
  Dashboard
<% end %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>

  <div>
    <%= link_to t("administrate.actions.back"), admin_root_path, class: "button" %>
  </div>
</header>

<section class="main-content__body">
  <%= form_with(url: show_admin_charts_path , local: true, method: :get, class: "form") do |f| %>
    <div class="field-unit">
      <div class="field-unit__label">
        <%= f.label 'Resource' %>
      </div>
      <div class="field-unit__field">
        <%=
          f.select(
            :resource,
            resource_select_options,
            include_blank: true
          )
        %>
      </div>
    </div>

    <div class="field-unit">
      <div class="field-unit__label">
        <%= f.label 'Y axis Group by attribute' %>
      </div>
      <div class="field-unit__field">
        <%=
          f.select(
            :y_axis,
            [],
            { include_blank: true },
            { class: 'axis' }
          )
        %>
      </div>
    </div>

    <div class="field-unit">
      <div class="field-unit__label">
        <%= f.label 'X axis Attribute' %>
      </div>
      <div class="field-unit__field">
        <%=
          f.select(
            :x_axis,
            [],
            { include_blank: true },
            { class: 'axis' }
          )
        %>
      </div>
    </div>

    <div class="field-unit">
      <div class="field-unit__label">
        <%= f.label 'X axis Funcion' %>
      </div>
      <div class="field-unit__field">
        <%=
          f.select(
            :function,
            [['Sum', :sum], ['Count', :count], ['Average', :average]]
          )
        %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit 'Generate' %>
    </div>
  <% end %>
</section>
